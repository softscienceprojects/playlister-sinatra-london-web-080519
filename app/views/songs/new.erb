<h1>Add a New Song</h1>

<form action="/songs" method="post">
    <p><label for="Name">Name</label>
    <input type="text" name="song[name]" id="Name"></p>

    <p><label for="Artist Name">Artist Name</label>
    <input type="text" name="song[artist][name]" id="Artist Name"></p>

    <% Genre.all.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="<%= genre.name %>">
    <label for="<%= genre.name %>"><%= genre.name %></label>
    <% end %>

    <button type="submit" value="submit" id="Create">Create</button>
</form>
